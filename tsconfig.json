{
    "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "typeRoots": [
          "./node_modules/@types",
          "./typings/*",
      ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
      },
    "include": [
        "src/**/*"
    ]
  }
  